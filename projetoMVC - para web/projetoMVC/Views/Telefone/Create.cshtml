@model projetoMVC.Models.Telefone

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Telefone</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.sCpf, "Pessoa")
        </div>
        <div class="editor-field">
            @Html.DropDownList("sCpf", String.Empty)
            @Html.ValidationMessageFor(model => model.sCpf)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nDDD)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nDDD)
            @Html.ValidationMessageFor(model => model.nDDD)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.sTel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.sTel)
            @Html.ValidationMessageFor(model => model.sTel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.sCel)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.sCel)
            @Html.ValidationMessageFor(model => model.sCel)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nPrincipal)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nPrincipal)
            @Html.ValidationMessageFor(model => model.nPrincipal)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
