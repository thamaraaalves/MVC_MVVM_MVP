@model IEnumerable<projetoMVC.Models.Pessoa>

@{
    ViewBag.Title = "Pessoa";
}

<h2>Cadastro de Pessoa</h2>

<p>
    @Html.ActionLink("Cadastrar nova", "Create")
</p>
<table border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.sNome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dDataNasci)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.nTipo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.sNome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dDataNasci)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.nTipo)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.sCPF }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.sCPF }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.sCPF })
        </td>
    </tr>
}

</table>
