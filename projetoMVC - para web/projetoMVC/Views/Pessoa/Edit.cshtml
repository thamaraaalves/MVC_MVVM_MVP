@model projetoMVC.Models.Pessoa

@{
    ViewBag.Title = "Editar";
}

<br />
<h2>Editar</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
<br />
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Pessoa</legend>

        @Html.HiddenFor(model => model.sCPF)

        <div class="editor-label">
            @Html.LabelFor(model => model.sNome)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.sNome)
            @Html.ValidationMessageFor(model => model.sNome)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.dDataNasci)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.dDataNasci)
            @Html.ValidationMessageFor(model => model.dDataNasci)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.nTipo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.nTipo)
            @Html.ValidationMessageFor(model => model.nTipo)
        </div>

        <p>
            <input type="submit" value="Salvar" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>
